{% extends 'base.html.twig' %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <label for="inputElPastas" class="sr-only">El. Paštas</label>
    <input type="text" value="{{ last_username }}" name="elPastas" id="inputElPastas" class="form-control" placeholder="El. Paštas" required autofocus>
    <label for="inputPassword" class="sr-only">Slaptažodis</label>
    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Slaptažodis" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-primary btn-outline-primary" type="submit">
        Prisijungti
    </button>
    <a class="btn btn-primary btn-outline-primary" type="button" href="/register">
        Registruotis
    </a>
</form>
{% endblock %}
