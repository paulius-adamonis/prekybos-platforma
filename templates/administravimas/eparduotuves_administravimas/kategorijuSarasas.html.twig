{% extends 'administravimas/parduotuve.html.twig' %}

{% block body %}
    {% if successMessage %}
        <div class="alert alert-success alert-dismissible fade show">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Pavyko!</strong> {{ successMessage }}
        </div>
    {% elseif errorMessage %}
        <div class="alert alert-danger alert-dismissible fade show">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Klaida!</strong> {{ errorMessage }}
        </div>
    {% endif %}
    {% if kategorijos %}
        <table class="table table-striped">
            <tr>
                <th>Pavadinimas</th>
                <th></th>
                <th></th>
            </tr>
            {% for kategorija in kategorijos %}
                <tr>
                    <td>{{ kategorija.pavadinimas }}</td>
                    <td>
                        <a href="{{ path('admin_parduotuve_redaguotiKategorija', {'kategorijosId': kategorija.id}) }}" class="btn btn-sm btn-light bg-primary">
                            Redaguoti
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('admin_parduotuve_salintiKategorija', {'kategorijosId': kategorija.id}) }}" class="btn btn-sm btn-light bg-danger">
                            Šalinti
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    {% else %}
        Šiuo metu sistemoje nėra nei vienos prekės!
    {% endif %}
{% endblock %}